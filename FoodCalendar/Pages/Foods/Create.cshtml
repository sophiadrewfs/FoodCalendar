@page
@model FoodCalendar.Pages.Foods.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Food.FoodName" class="control-label"></label>
                <input asp-for="Food.FoodName" class="form-control" />
                <span asp-validation-for="Food.FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Food.LastAte" class="control-label"></label>
                <input asp-for="Food.LastAte" class="form-control" />
                <span asp-validation-for="Food.LastAte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Food.Type" class="control-label"></label>
                <input asp-for="Food.Type" class="form-control" />
                <span asp-validation-for="Food.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Food.DishType" class="control-label"></label>
                <select asp-for="Food.DishType" class="form-control"
                        asp-items="@Model.DishTypeSL">
                    <option value="">-- Select DishType --</option>
                </select>
                <span asp-validation-for="Food.DishType" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Food.NumofPeople" class="control-label"></label>
                <input asp-for="Food.NumofPeople" class="form-control" />
                <span asp-validation-for="Food.NumofPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
